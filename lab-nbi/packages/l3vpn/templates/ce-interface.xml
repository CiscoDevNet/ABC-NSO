<devices xmlns="http://tail-f.com/ns/ncs">
  <device>
    <name>{$CE_DEVICE}</name>
    <config>
      <interface xmlns="urn:ios">
        <GigabitEthernet>
          <name>{$CE_INTF_NUM}</name>
          <description>{$LINK_DESC}</description>
          <service>
            <instance>
              <id>{$LINK_VLAN}</id>
              <ethernet/>
              <encapsulation>
                <dot1q>
                  <id>{$LINK_VLAN}</id>
                </dot1q>
              </encapsulation>
              <rewrite>
                <ingress>
                  <tag>
                    <pop>1</pop>
                    <mode>symmetric</mode>
                  </tag>
                </ingress>
              </rewrite>
              <bridge-domain>
                <bridge-id>{$LINK_VLAN}</bridge-id>
              </bridge-domain>
            </instance>
          </service>
          <ip>
            <no-address>
              <address>false</address>
            </no-address>
            <address>
              <primary>
                <address tags="delete" />
                <mask tags="delete" />
              </primary>
            </address>
          </ip>
        </GigabitEthernet>
        <BDI>
          <name>{$LINK_VLAN}</name>
          <mop>
            <xenabled>false</xenabled>
            <sysid>false</sysid>
          </mop>
          <ip>
            <address>
              <primary>
                <address>{$CE_IP}</address>
                <mask>255.255.255.252</mask>
              </primary>
            </address>
          </ip>
          <ipv6>
            <address>
              <prefix-list>
                <prefix>{$CE_IPV6}/64</prefix>
              </prefix-list>
            </address>
          </ipv6>
        </BDI>
      </interface>
    </config>
  </device>
</devices>

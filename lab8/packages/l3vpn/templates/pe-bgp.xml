<devices xmlns="http://tail-f.com/ns/ncs">
  <device>
    <name>{$PE_DEVICE}</name>
    <config>
      <route-policy xmlns="http://tail-f.com/ned/cisco-ios-xr">
        <name>PASS</name>
        <value>pass</value>
      </route-policy>
      <router xmlns="http://tail-f.com/ned/cisco-ios-xr">
        <bgp>
          <bgp-no-instance>
            <id>64497</id>
            <vrf>
              <name>{$VPN_NAME}</name>
              <rd>64497:{$VPN_ID}</rd>
              <address-family>
                <ipv4>
                  <unicast>
                    <redistribute>
                      <connected/>
                    </redistribute>
                  </unicast>
                </ipv4>
                <ipv6>
                  <unicast>
                    <redistribute>
                      <connected/>
                    </redistribute>
                  </unicast>
                </ipv6>
              </address-family>
              <neighbor>
                <id>{$CE_IP}</id>
                <remote-as>65001</remote-as>
                <address-family>
                  <ipv4>
                    <unicast>
                      <route-policy>
                        <direction>in</direction>
                        <name>PASS</name>
                      </route-policy>
                      <route-policy>
                        <direction>out</direction>
                        <name>PASS</name>
                      </route-policy>
                      <allowas-in>
                        <as-occurrence-number>1</as-occurrence-number>
                      </allowas-in>
                      <as-override/>
                    </unicast>
                  </ipv4>
                  <ipv6>
                    <unicast>
                      <route-policy>
                        <direction>in</direction>
                        <name>PASS</name>
                      </route-policy>
                      <route-policy>
                        <direction>out</direction>
                        <name>PASS</name>
                      </route-policy>
                      <allowas-in>
                        <as-occurrence-number>1</as-occurrence-number>
                      </allowas-in>
                      <as-override/>
                    </unicast>
                  </ipv6>
                </address-family>
              </neighbor>
            </vrf>
          </bgp-no-instance>
        </bgp>
      </router>
    </config>
  </device>
</devices>


<devices xmlns="http://tail-f.com/ns/ncs">
  <device>
    <name>{$CE_DEVICE}</name>
    <config>
      <router xmlns="urn:ios">
        <bgp>
          <as-no>65001</as-no>
          <bgp>
            <log-neighbor-changes>true</log-neighbor-changes>
          </bgp>
          <neighbor>
            <id>{$PE_IP}</id>
            <remote-as>64497</remote-as>
          </neighbor>
          <address-family>
            <ipv4>
              <af>unicast</af>
              <neighbor>
                <id>{$PE_IP}</id>
                <activate/>
                <allowas-in>
                  <as-no>1</as-no>
                </allowas-in>
                <as-override/>
              </neighbor>
            </ipv4>
            <ipv6>
              <af>unicast</af>
              <neighbor>
                <id>{$PE_IP}</id>
                <activate/>
              </neighbor>
            </ipv6>
          </address-family>
        </bgp>
      </router>
    </config>
  </device>
</devices>

<devices xmlns="http://tail-f.com/ns/ncs">
  <device>
    <name>{$PE_DEVICE}</name>
    <config>
      <vrf xmlns="http://tail-f.com/ned/cisco-ios-xr">
        <vrf-list>
          <name>{$VPN_NAME}</name>
          <address-family>
            <ipv4>
              <unicast>
                <import>
                  <route-target>
                    <address-list>
                      <name>64497:{$VPN_ID}</name>
                    </address-list>
                  </route-target>
                </import>
                <export>
                  <route-target>
                    <address-list>
                      <name>64497:{$VPN_ID}</name>
                    </address-list>
                  </route-target>
                </export>
                <maximum>
                  <prefix>
                    <limit>{$VPN_MAX_PREF}</limit>
                    <mid-thresh>{$VPN_PREF_THRESH}</mid-thresh>
                  </prefix>
                </maximum>
              </unicast>
            </ipv4>
            <ipv6>
              <unicast>
                <import>
                  <route-target>
                    <address-list>
                      <name>64497:{$VPN_ID}</name>
                    </address-list>
                  </route-target>
                </import>
                <export>
                  <route-target>
                    <address-list>
                      <name>64497:{$VPN_ID}</name>
                    </address-list>
                  </route-target>
                </export>
                <maximum>
                  <prefix>
                    <limit>{$VPN_MAX_PREF}</limit>
                    <mid-thresh>{$VPN_PREF_THRESH}</mid-thresh>
                  </prefix>
                </maximum>
              </unicast>
            </ipv6>
          </address-family>
        </vrf-list>
      </vrf>
    </config>
  </device>
</devices>
